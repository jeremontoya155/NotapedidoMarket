<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subir Nota de Pedido</title>
  <link rel="stylesheet" href="css/buyer.css">
  <script>
    // Mostrar alert de éxito si hay un parámetro success en la URL
    window.onload = function() {
      const params = new URLSearchParams(window.location.search);
      if (params.has('success')) {
        alert('Nota de pedido subida con éxito.');
      }
    };

    // Función para validar las fechas
    function validateForm() {
      const fechaPago = document.getElementById('fecha_pago').value;

      if (!isValidDate(fechaPago)) {
        alert('Por favor, asegúrate de que las fechas son válidas y que el año es 2024.');
        return false;
      }
      return true;
    }

    function isValidDate(dateString) {
      const date = new Date(dateString);
      return !isNaN(date.getTime()) && date.getFullYear() === 2024;
    }
  </script>
</head>
<body>
  <div class="formularioSubida">
      <!-- Formulario para subir el archivo Excel -->
      <form action="/buyer/upload" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()" class="form-container">
        <h1>Subir Nota de Pedido</h1>
        <div class="form-group">
          <label for="file">Selecciona el archivo Excel (.xlsx):</label>
          <input type="file" name="file" accept=".xlsx" required class="form-input fileInput">
        </div>
    
        <div class="form-group">
          <label for="fecha_pago">Fecha de Pago (si es necesario corregir):</label>
          <input type="date" id="fecha_pago" name="fecha_pago" class="form-input">
        </div>
    
        <button type="submit" class="submit-btn">Subir Nota</button>
      </form>
  </div>
</body>
</html>
